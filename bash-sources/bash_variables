#!/bin/bash

export PS1='\[\033[01;34m\]\W\[\033[01;33m\]$(__git_ps1)\[\033[01;34m\]\$\[\033[00m\] '

# Add paths to PATH
export PATH=~/.bin:~/.bin/tmux-sessions:~/.bin/helpers:${PATH} # Add ~/.bin
export PATH=${PATH}:$HOME/.rvm/bin # Add RVM

# For tmux
export TERM=xterm-256color
export EDITOR=vi

export LC_CTYPE=en_US.UTF-8

# For mac colors in terminal
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
export HISTIGNORE="ls:ll:cd:pwd"
export HISTSIZE=10000
export HISTFILESIZE=20000

export NODE_PATH=/usr/local/lib/node:/usr/local/lib/node_modules
### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH:$NODE_PATH"
