
snippet abline
abbr    ggplot2::geom_abline
alias   ggplot_abline ggplot_geom_abline geom_abline x_eq_y
options head
  ggplot2::geom_abline(slope = ${1:1}, intercept = ${2:0}, color = "${3:grey}")

snippet autolayer
abbr    ggplot::autolayer
alias   ggplot_autolayer
options head
  ggplot::autolayer(${1:#:dta}, series = "${2:dta series}")

snippet autoplot
abbr    ggplot::autoplot
alias   ggautoplot
options word
  ggplot2::autoplot(${1}) +
    ggplot2::ggtitle("${2:title}") + ggplot2::xlab("${3:xlab}") + ggplot2::ylab("${4:ylab}")

snippet geom_line
abbr    ggplot2::geom_line
alias   ggline ggplot2_geom_line
options word
  ggplot2::geom_line(ggplot2::aes(${1:color} = ${2:#:column}))

snippet geom_point
abbr    ggplot2::geom_point
alias   ggpoints ggplot2_geom_point
options word
  ggplot2::geom_point()

snippet ggplot
abbr    grammar-of-graphics-plot
alias   ggplot2
options word
  ggplot2::ggplot(${1:data}, ggplot2::aes(${0:aesthetics})) +

snippet ggsave
abbr    ggplot::ggsave
alias   ggplot_save save_plot
options head
  ggplot2::ggsave("${1:/tmp/plot}.svg")

snippet ggtitle
abbr    ggplot::ggtitle
alias   ggplot_ggtitle
options word
  ggplot2::ggtitle("${1:title}") + ggplot2::xlab("${2:xlab}") + ggplot2::ylab("${3:ylab}")

snippet guides
abbr    ggplot::guides
alias   ggplot_guides
options head
  ggplot2::guides(colour = ggplot2::guide_legend(title = "${1:Series}"))

snippet limits
abbr    ggplot2::xlim_ylim
alias   ggplot_limits
options head
  ggplot2::xlim(${1:0}, ${2:#:xlim_max}) + ggplot2::ylim(${3:0}, ${4:#:ylim_max})

snippet qplot
abbr    ggplot2::qplot
options word
  ggplot2::qplot(${1:#:xVar}, ${2:#:yVar}) +
    ggplot2::ggtitle("${3:title}") +
    ggplot2::xlab("${4:xlab}") + ggplot2::ylab("${5:ylab}")

snippet seasonplot
abbr    forecast::ggseasonplot
alias   ggseasonplot
options word
  forecast::ggseasonplot(year.labels = TRUE, year.labels.left = TRUE) +
    ggplot2::ggtitle("${1:title}") + ggplot2::ylab("${2:ylab}")

snippet subseriesplot
abbr    forecast::ggsubseriesplot
alias   ggsubseriesplot
options word
  forecast::ggsubseriesplot() +
    ggplot2::ggtitle("${1:title}") + ggplot2::ylab("${2:ylab}")

snippet xlim
abbr    ggplot2::xlim
alias   ggplot_xlim
options head
  ggplot2::xlim(${1:0}, ${2:#:xlim_max}) + ggplot2::ylim(${3:0}, ${4:#:ylim_max})

snippet ylim
abbr    ggplot2::ylim
alias   ggplot_ylim
options head
  ggplot2::ylim(${1:0}, ${2:#:ylim_max}) + ggplot2::xlim(${3:0}, ${4:#:xlim_max})
