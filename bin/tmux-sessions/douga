#!/bin/zsh
T=douga
sh="; zsh -i"
tmux new-session -s $T   -n tmp   -d "cd /tmp           ${sh}"
tmux new-window  -t $T:1 -n douga    "cd ~/douga        ${sh}"
tmux new-window  -t $T:2 -n svt      "cd ~/douga/svt    ${sh}"
tmux new-window  -t $T:3 -n twitch   "cd ~/douga/twitch ${sh}"

tmux select-window -t $T:1
tmux -2 attach-session -t $T
