#!/bin/bash 
T=douga
bs="; bash -i"
tmux new-session -s $T   -n tmp   -d "cd /tmp           ${bs}"
tmux new-window  -t $T:1 -n douga    "cd ~/douga        ${bs}"
tmux new-window  -t $T:2 -n svt      "cd ~/douga/svt    ${bs}"
tmux new-window  -t $T:3 -n twitch   "cd ~/douga/twitch ${bs}"

tmux select-window -t $T:1
tmux -2 attach-session -t $T
